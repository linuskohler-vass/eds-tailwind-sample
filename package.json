{
  "name": "@linuskohler-vass/eds-tailwind-sample",
  "private": true,
  "version": "0.0.1",
  "description": "A document based EDS setup sample using Tailwind 4.",
  "scripts": {
    "start": "concurrently 'npm run start:aem' 'npm run tailwind'",
    "start:aem": "aem up",
    "tailwind": "npx tailwindcss -i ./styles/base.css -o ./styles/styles.css --watch --minify",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "engines": {
    "node": ">=22"
  },
  "author": "VASS Switzerland",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/linuskohler-vass/eds-tailwind-sample/issues"
  },
  "homepage": "https://github.com/linuskohler-vass/eds-tailwind-sample#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.26.10",
    "concurrently": "^9.1.2",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.31.0",
    "stylelint": "16.16.0",
    "stylelint-config-standard": "37.0.0",
    "tailwindcss": "^4.0.15"
  }
}
